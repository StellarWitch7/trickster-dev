{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Trick",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#types"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.trick",
					"begin": "#",
					"end": "\n"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.trick",
					"match": "!root\\b"
				},
				{
					"name": "keyword.operator.trick",
					"match": "\\b(as)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.trick",
					"match": "\\b[0-9]+\\.?[0-9]*"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.trick",
					"match": "\\b(any|void|spell|vector|number|entity)\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.name.trick",
					"match": "\\$[A-Za-z0-9_]+\\b"
				}
			]
		}
	},
	"scopeName": "source.trick"
}
