{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Trick",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#types"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.trick",
					"begin": "#",
					"end": "\n"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.trick",
					"match": "(?=\\b)(if|then|else|let|or|and)(?=\\b)"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.trick",
					"match": "(?=\\b)[0-9]+\\.?[0-9]*(?=\\b)"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.trick",
					"match": "(?=\\b)(any|void|vector|number|entity|slot|block|type|spell)(?=\\b)"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "support.function.trick",
					"match": "(?=\\b)([A-Za-z][A-Za-z_' ]+)(?=\\()"
				},
				{
					"name": "variable.name.trick",
					"match": "(?=\\b)([A-Za-z][A-Za-z_' ]+)(?=\\b)"
				}
			]
		}
	},
	"scopeName": "source.trick"
}
